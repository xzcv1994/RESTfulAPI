<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="rest_api.member.mapper.MemberMapper">
    <select id="selectById" parameterType="string" resultType="rest_api.member.vo.MemberVO">
        SELECT * FROM MEMBER WHERE ID = #{id}
    </select>

    <select id="selectByName" parameterType="string" resultType="rest_api.member.vo.MemberVO">
        SELECT * FROM MEMBER WHERE NAME = #{name}
    </select>
    
    <select id="selectAll" resultType="rest_api.member.vo.MemberVO">
        SELECT * FROM MEMBER
    </select>
    
    <insert id="insertMember" parameterType="rest_api.member.vo.MemberVO">
        INSERT INTO MEMBER(ID, NAME) VALUES(#{id}, #{name})
    </insert>

    <update id="updateMember" parameterType="rest_api.member.vo.MemberVO">
        UPDATE MEMBER SET id = #{id}, NAME = #{name} WHERE ID = #{id}
    </update>

    <delete id="deleteMember" parameterType="rest_api.member.vo.MemberVO">
        DELETE FROM MEMBER WHERE ID = #{id}
    </delete>
</mapper>

